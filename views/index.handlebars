<div class="row">

    <div class="col-12 col-md-6">
        <h2>Burgers Ready to Eat</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>{{burger_name}}</li><button type="button" class="btn btn-primary devour" data-id="{{id}}">Devour!</button>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-12 col-md-6">
        <h2>Already Eaten Burgers</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <form class="newburger-form">

            <div class="form-group">
                <label for="ingre">Ingredients</label>
                <input type="text" id="ingre" name="ingredients">
            </div>

            <button type="submit" class="btn btn-primary">Add Burger</button>
        </form>

    </div>
</div>