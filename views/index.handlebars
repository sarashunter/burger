    <div class="col-12 col-md-6">
        <h2>Burgers Ready to Eat</h2>
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <li>{{burger_name}}</li>
            {{/unless}}
            {{/each}}
        </ul>
    </div>
    <div class="col-12 col-md-6">
        <h2>Already Eaten Brugers</h2>

        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <li>{{burger_name}}</li>
            {{/if}}
            {{/each}}
        </ul>
    </div>

    
